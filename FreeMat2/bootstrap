set -x
aclocal
automake --add-missing --copy
autoconf
autoheader
sed -e 's/crt\[01\]/crt\[012\]/g' configure > configure.mac
rm configure
mv configure.mac configure
chmod +x configure
cd libs/libffi
aclocal
automake --add-missing --copy
mv Makefile.in Makefile.in_auto
sed -e 's/$(CCASCOMPILE) -c $</$(CCASCOMPILE) -c -o $@ $</g' Makefile.in_auto > Makefile.in
autoconf
