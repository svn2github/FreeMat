#! /bin/sh
#  reconfig
#    Runs configure scripts

DEFAULT_OPTS="--prefix=$HOME/matio_v1.1.2 --exec-prefix=$HOME/matio_v1.1.2"

cd build-cygwin

ZLIB_OPTS="--with-zlib-prefix=/usr/local"
DOCS_OPTS="--with-docs=yes"
CC=gcc \
CFLAGS='-v -O3 -g -ffast-math -malign-double -mms-bitfields -Wall -pedantic -mno-cygwin -fPIC -fexceptions' \
LDFLAGS='-fexceptions' \
../configure $DEFAULT_OPTS $ZLIB_OPTS $DOCS_OPTS

if test $? = 0
then
    make
fi

if test $? = 0
then
    make install
fi 

cd ..
