#! /bin/sh
#  reconfig
#    Runs configure scripts

DEFAULT_OPTS="--prefix=$HOME/matio_v1.1.4 --exec-prefix=$HOME/matio_v1.1.4"

cd build-mingw

ZLIB_OPTS="--with-zlib-prefix=/usr/local"
DOCS_OPTS="--with-docs=yes"
CC=gcc \
../configure $DEFAULT_OPTS $ZLIB_OPTS $DOCS_OPTS

if test $? = 0
then
    make
fi

if test $? = 0
then
    make install
fi

cd ..
