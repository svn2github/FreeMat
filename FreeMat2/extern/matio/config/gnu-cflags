case $build_os in
*cygwin*)
    DEBUG_CFLAGS="-mno-cygwin -O0 -Wall -pedantic -fexceptions -g -Wl,--no-whole-archive"
    DEBUG_LDFLAGS="-Wl,--no-whole-archive"
    PROFILE_CFLAGS="-mno-cygwin -g -p"
    REL_CFLAGS="-O3 -ffast-math -fexceptions"
    REL_LDFLAGS="-Wl,-s,--no-whole-archive"
;;
*)
    DEBUG_CFLAGS="-O0 -Wall -pedantic -fexceptions -g -Wl,--no-whole-archive"
    DEBUG_LDFLAGS="-Wl,--no-whole-archive"
    PROFILE_CFLAGS="-g -p"
    REL_CFLAGS="-O3 -ffast-math -fexceptions"
    REL_LDFLAGS="-Wl,-s,--no-whole-archive"
    C_ARCH32="-m32"
    C_ARCH64="-m64"
    ;;
esac
