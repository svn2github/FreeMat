SocketCB.cpp
application.cpp
main.cpp""")
env.Append(CPPPATH = ['.','../libs/libFreeMat','../libs/libXP','../libs/libCore','../libs/libFN','../libs/libGraphics'])
libdirlist = Split("""
../libs/libARPACK
../libs/libCore
../libs/libffi
../libs/libFFTPack
../libs/libGraphics
../libs/libUMFPACK
../libs/libUMFPACK/AMD
../libs/libFN
../libs/libFreeMat
../libs/libXP
""")
liblist = Split("""
Core
FFTPack
FN
FreeMat
ffi
Graphics
XP
ARPACK
UMFPACKzi
UMFPACKdi
AMD
curses
""")
